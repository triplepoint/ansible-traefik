version: '3.7'

services:
  reverse-proxy:
    image: traefik:{{ traefik_version }}
    container_name: traefik
    ports:
      - "80:80"
      - "443:443"
{% for name, portnumber in traefik_additional_entrypoints.items() %}
      - "{{ portnumber }}:{{ portnumber }}"
{% endfor %}
    volumes:
{% for vol in _traefik_volumes %}
      - {{ vol }}
{% endfor %}
networks:
  default:
    name: {{ traefik_network_name }}
